    </div>

    <div class="container">

  	  <div class="row" style="margin-top:80px;">
		  <div class="col-md-4">
			<form>
	
				<h3>Move</h3>
				<table class="table table-condensed">
					<tr><td>&nbsp;</td><td><input class="btn btn-success button_std" onClick="sendData('forward');"  type="button" name="FORWARD" value="FORWARD"/></td><td>&nbsp;</td></tr>
					<tr><td><input class="btn btn-success" onClick="sendData('left');" style="button_std" type="button" name="LEFT" value="LEFT"/></td>
					<td><input class="btn btn-danger" onClick="sendData('stop');" style="button_std" type="button" name="STOP" value="STOP"/></td>
					<td><input class="btn btn-success" onClick="sendData('right');" style="button_std" type="button" name="RIGHT" value="RIGHT"/></td></tr>
					<tr><td>&nbsp;</td><td><input class="btn btn-success" onClick="sendData('back');" style="button_std" type="button" name="BACK" value="BACK"/></td><td>&nbsp;</td></tr>
				</table>

				<h3>Cam</h3>
				<table class="table table-condensed">
					<tr><td>&nbsp;</td><td><input class="btn btn-success" onClick="sendCamData('up');" style="button_std" type="button" name="UP" value="UP"/></td><td>&nbsp;</td></tr>
					<tr><td><input class="btn btn-success" onClick="sendCamData('left');" style="button_std" type="button" name="LEFT" value="LEFT"/></td>
					<td><input class="btn btn-danger" onClick="sendCamData('reset');" style="button_std" type="button" name="RESET" value="RESET"/></td>
					<td><input class="btn btn-success" onClick="sendCamData('right');" style="button_std" type="button" name="RIGHT" value="RIGHT"/></td></tr>
					<tr><td>&nbsp;</td><td><input class="btn btn-success" onClick="sendCamData('down');" style="button_std" type="button" name="DOWN" value="DOWN"/></td><td>&nbsp;</td></tr>
				</table>

				<h3>Utility</h3>
				<table class="table table-condensed">
					<tr><td><input class="btn btn-success" onClick="sendCamData('check');" style="button_std" type="button" name="CHECK" value="CHECK"/></td><td>&nbsp;</td></tr>
				</table>
				
				
			</form>

				<div class="table-responsive">
					<table class="table table-condensed table-bordered" id="myTable">
					<thead>
						<tr><td>Type</td><td>Date</td><td>Calling</td><td>Message</td><td>Error</td></tr>
					</thead>
					<tbody>
					</tbody>
					</table>
